<script src="paypal-config.js?v=27"></script>
<script>
  (function(){
    var cfg = (window.DX_PAYPAL && window.DX_PAYPAL.pack) ? window.DX_PAYPAL.pack : null;
    var link = document.getElementById('paypalLink');
    var missing = document.getElementById('paypalMissing');
    if (cfg && cfg.ncpLink) {
      link.href = cfg.ncpLink;
      link.style.display = '';
    }
    if (cfg && cfg.hostedButtonId && window.DX_PAYPAL && window.DX_PAYPAL.hostedClientId) {
      var s = document.createElement('script');
      s.src = 'https://www.paypal.com/sdk/js?client-id=' + encodeURIComponent(window.DX_PAYPAL.hostedClientId) + '&components=hosted-buttons&disable-funding=venmo&currency=EUR';
      s.onload = function(){
        try {
          if (window.paypal && paypal.HostedButtons) {
            paypal.HostedButtons({ hostedButtonId: cfg.hostedButtonId }).render('#paypal-container-pack');
          }
        } catch(e){ console.warn(e); }
      };
      document.head.appendChild(s);
    } else {
      missing.style.display = '';
    }
  })();
</script>
